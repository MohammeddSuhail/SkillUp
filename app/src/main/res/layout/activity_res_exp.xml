<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/almost_black"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        tools:context=".resExpActivity">

        <TextView
            android:id="@+id/tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Experience 1 (*optional)"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/mulish_bold"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_exp_til_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:errorEnabled="true"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_exp_et_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:hint="Company Name" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_exp_til_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:errorEnabled="true"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_exp_et_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:hint="Job Title" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/form_exp_til_sdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:errorEnabled="true"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@drawable/outlined_box_border_color"
                app:hintTextColor="#878787"
                app:hintTextAppearance="@android:style/TextAppearance.Small">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/form_exp_et_sdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="#878787"
                    android:hint="Start Date" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/form_exp_til_edate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                app:errorEnabled="true"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@drawable/outlined_box_border_color"
                app:hintTextColor="#878787"
                app:hintTextAppearance="@android:style/TextAppearance.Small">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/form_exp_et_edate"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:textColorHint="#878787"
                    android:layout_height="wrap_content"
                    android:hint="End Date" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_exp_til_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:errorEnabled="true"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_exp_et_desc"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:layout_height="wrap_content"
                android:hint="Description" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/ttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Experience 2 (*optional)"

            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/mulish_bold" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_exp_til_company2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:errorEnabled="true"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_exp_et_company2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:textColor="@color/white"
                android:textColorHint="#878787" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_exp_til_job2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:errorEnabled="true"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_exp_et_job2"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:layout_height="wrap_content"
                android:hint="Job Title" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/form_exp_til_sdate2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:errorEnabled="true"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:layout_marginEnd="15dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@drawable/outlined_box_border_color"
                app:hintTextColor="#878787"
                app:hintTextAppearance="@android:style/TextAppearance.Small">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/form_exp_et_sdate2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="#878787"
                    android:hint="Start Date" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/form_exp_til_edate2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:errorEnabled="true"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@drawable/outlined_box_border_color"
                app:hintTextColor="#878787"
                app:hintTextAppearance="@android:style/TextAppearance.Small">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/form_exp_et_edate2"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:textColorHint="#878787"
                    android:layout_height="wrap_content"
                    android:hint="End Date" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_exp_til_desc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            app:errorEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_exp_et_desc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description" />

        </com.google.android.material.textfield.TextInputLayout>













        <Button
            android:id="@+id/form_exp_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#00b894"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:icon="@drawable/ic_check_black_24dp"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

</ScrollView>
