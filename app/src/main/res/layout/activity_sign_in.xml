<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical"
        tools:context=".SignInActivity"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/mulish"
            android:text="Get Placement ready with Placemaker!"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/signin_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="#24282b"
                android:orientation="vertical"
                android:padding="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:fontFamily="@font/mulish"
                    android:gravity="center"
                    android:text="Sign In"
                    android:textColor="#C0C0C0"
                    android:textSize="35dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:textColorHint="#A1A1A1"
                    android:layout_marginTop="16dp"

                    app:boxStrokeColor="#A1A1A1"
                    android:outlineAmbientShadowColor="#A1A1A1"
                    android:outlineSpotShadowColor="#A1A1A1"
                    app:placeholderTextColor="#A1A1A1"
                    app:hintTextColor="#A1A1A1"

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/mulish"
                        android:hint="College email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#878787"
                        android:textSize="18dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_text_input"
                    android:textColorHint="#A1A1A1"
                    android:layout_marginTop="16dp"

                    app:boxStrokeColor="#A1A1A1"
                    android:outlineAmbientShadowColor="#A1A1A1"
                    android:outlineSpotShadowColor="#A1A1A1"
                    app:placeholderTextColor="#A1A1A1"
                    app:hintTextColor="#A1A1A1"

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pwd_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/mulish"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#878787"
                        android:textSize="18dp" />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/sign_in_button_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#C0C0C0"
                    android:fontFamily="@font/mulish_bold"
                    android:padding="10dp"
                    android:text="Login"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/forgot_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/mulish_bold"
                    android:text="Forgot Password?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#C0C0C0"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/mulish"
                        android:text="New to Placemaker? "
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#C0C0C0"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/new_account_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/mulish_bold"
                        android:text="Sign up now"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#C0C0C0"
                        android:textSize="18dp" />
                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

