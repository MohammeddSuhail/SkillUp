<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:background="@color/almost_black"
    android:paddingEnd="20dp"
    tools:context=".resSkillActivity">

    <LinearLayout
        android:id="@+id/form_skill_ll_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/form_skill_ll_heading">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_skill_til_skill1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:errorEnabled="true"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_skill_et_skill1"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:hint="Skill 1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_skill_til_skill2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:errorEnabled="true"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_skill_et_skill2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:hint="Skill 2" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_skill_til_skill3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            app:errorEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_skill_et_skill3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:hint="Skill 3" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_skill_til_skill4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:errorEnabled="true"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_skill_et_skill4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:hint="Skill 4" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/form_skill_til_skill5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:errorEnabled="true"
            android:textColor="@color/white"
            android:textColorHint="#878787"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@drawable/outlined_box_border_color"
            app:hintTextColor="#878787"
            app:hintTextAppearance="@android:style/TextAppearance.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_skill_et_skill5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:hint="Skill 5" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/form_skill_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#00b894"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:icon="@drawable/ic_check_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_personal_ll_form" />



    </LinearLayout>

</LinearLayout>

