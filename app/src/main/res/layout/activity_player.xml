<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almost_black"
    tools:context=".PlayerActivity">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:id="@+id/horizontalview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youtube_player_view">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youtube_player_view"
            android:layout_weight="3"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/vtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/youtube_player_view"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/mulish"
                android:text="Introduction"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/module"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vtitle"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/mulish_extralight"
                android:text="INTRODUCTION AND SCHEDULES"
                android:textAllCaps="true"
                android:textColor="@color/moduleBLUE"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/pin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_baseline_push_pin_24" />

        <ImageView
            android:id="@+id/unpin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/unpin" />
    </LinearLayout>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/imp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalview"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/mulish_extralight"
        android:text="IMPORTANT"
        android:textAllCaps="true"
        android:textColor="#FF9800"
        android:textSize="15dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/mulish_extralight"
        android:text="Rotate your phone to get a Full Screen view "
        android:drawableRight="@drawable/screen_rotate"
        android:textColor="#CACACA"
        android:textSize="15dp" />


</RelativeLayout>
