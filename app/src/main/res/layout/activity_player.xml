<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youtube_player_view"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/mulish_extralight"
        android:text="Introduction"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/imp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/module"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/mulish_extralight"
        android:text="IMPORTANT"
        android:textAllCaps="true"
        android:textColor="#FF9800"
        android:textSize="15sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vtitle"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/mulish_extralight"
        android:text="INTRODUCTION AND OSI"
        android:textAllCaps="true"
        android:textColor="@color/moduleBLUE"
        android:textSize="15sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/mulish_extralight"
        android:text="Rotate your phone to get a Full Screen view "
        android:drawableRight="@drawable/screen_rotate"
        android:textColor="#CACACA"
        android:textSize="15sp" />


</RelativeLayout>