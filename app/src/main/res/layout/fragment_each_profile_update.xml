<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EachProfileUpdateFragment"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="#2a2b2d">


    <ImageView
        android:id="@+id/back_profile_update"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:tint="@color/white"
        android:src="@drawable/left_arrow" />

    <TextView
        android:id="@+id/update_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Edit your "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/mulish_bold"/>

    <EditText
        android:id="@+id/update_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/profile_update_et"
        android:ems="10"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Name" />

    <androidx.cardview.widget.CardView
        android:id="@+id/update_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/mulish_bold"
                android:text="Save"
                android:textColor="#2a2b2d"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>